# OpenAI API Key (required for AI ruleset generation)
OPENAI_API_KEY=your_openai_api_key_here

# Google Gemini API Key (Google AI Studio)
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-1.5-flash

# Hugging Face API Key (alternative to OpenAI)
HUGGINGFACE_API_KEY=your_huggingface_token_here
HUGGINGFACE_MODEL=mistralai/Mistral-7B-Instruct-v0.1

# Alternative AI APIs (optional)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3.2

# AI Provider Selection (openai, huggingface, ollama, gemini)
AI_PROVIDER=gemini

# Development settings
DEBUG=true
PROJECT_NAME=AI Ruleset Generator
PROJECT_DESCRIPTION=AI-powered development ruleset generator
VERSION=1.0.0

# CORS settings for production
ALLOWED_ORIGINS=["*"]

# Production settings
HOST=0.0.0.0
PORT=8000
